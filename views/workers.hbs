<div class="container-md mcont pad text-center">
    <div class="row  text-center align-items-center">
        <div class="col-6">
            <p>Choose count of workers that appear on page</p>
        </div>
        <div class="col-2">
            <form>
                <input type="number" step="5" min="5" max="25">
                <button type="submit">ok</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <p>Watch:</p>
        </div>
        <div class="col-6">
            <form action="/workers" method="post">
                <input type="radio" name="sort" value="1"> sort by A-Z
                <input type="radio" name="sort" value="2"> sort by Z-A
                <input type="radio" name="sort" value="3"> sort by position
                <button type="submit">ok</button>
            </form>
        </div>
    </div>
    {{#if emps.length}}
    <table border="1">
        <tr>
            <td>FIO</td>
            <td>Birthday</td>
            <td>Id card</td>
            <td>Address</td>
            <td>Position</td>
            <td>Salary</td>
            <td>Edit</td>
            <td>Remove</td>
        </tr>
        {{#each emps}}
        <tr>
            <th>{{ fio }}</th>
            <th>{{ birthDay }}</th>
            <th>{{ id_card }}</th>
            <th>{{ address }}</th>
            <th>{{ position}}</th>
            <th>{{ salary_per_hour }}</th>
            <th><a href="/editEmp/{{_id}}" class="remove">
                    <span class="fas fa-times">Edit</span>
                </a></th>
            <th>
                <a href="/removeEmp/{{_id}}" class="remove">
                    <span class="fas fa-times">Remove</span>
                </a>
            </th>
        </tr>
        {{/each}}
    </table>
    <h3>
        <a href="/addEmp" class="add">
            <span class="fas fa-times">Add new employee</span>
        </a>
    </h3>
    {{/if}}
</div>
